#!/bin/sh

# Massimo Lauria, 2010
#
# Common enviroment variables to be loaded in bash, zsh, X11, ...
#

# Where everything starts
CONFIGDIR=$HOME/config

# {{{ Paths --------------------------------------------------------------------

# Those are useful for MacPorts 
if [ -d /opt/local/bin ]; then
    PATH=/opt/local/bin:$PATH
fi

if [ -d /opt/local/sbin ]; then
    PATH=/opt/local/sbin:$PATH
fi

if [ -d /Applications/Aquamacs.app/Contents/MacOS/bin ]; then
    PATH=/Applications/Aquamacs.app/Contents/MacOS/bin:$PATH
fi

# }}} --------------------------------------------------------------------------




# {{{ Aliases ------------------------------------------------------------------

if [ "$TERM" != "dumb" -a -f `which dircolors` ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto'
fi
alias rm="rm -iv"

# }}} --------------------------------------------------------------------------


# {{{ Pager --------------------------------------------------------------------
if [ -f `which most` ]; then
    PAGER=most
elif [ -f `which less` ]; then
    PAGER=less
else
    PAGER=more
fi
export PAGER
# }}} --------------------------------------------------------------------------

# {{{ Editor -------------------------------------------------------------------

EDITOR="emacsclient"

if [[ -f `which qemacs` ]]; then
    ALTERNATE_EDITOR="qemacs"
elif [[ -f `which jed` ]]; then
    ALTERNATE_EDITOR="jed"
elif [[ -f `which zile` ]]; then
    ALTERNATE_EDITOR="zile"
elif [[ -f `which mg` ]]; then
    ALTERNATE_EDITOR="mg"
elif [[ -f `which vim` ]]; then
    ALTERNATE_EDITOR="vim"
else
    ALTERNATE_EDITOR="vi"
fi

# Never use terminal emacs on Mac...
if [ `uname` = "Darwin" ]; then
    alias ec="emacsclient -n"
else
    alias ec="emacsclient -t"
fi
alias ecx="emacsclient -n -c"
    

export EDITOR
export ALTERNATE_EDITOR



# Python enviroment variables
PYTHONSTARTUP=$CONFIGDIR/pythonrc/pythonrc.py
if [ -f $PYTHONSTARTUP ]; then
    export PYTHONSTARTUP
fi

# LaTeX enviroment variables
export TEXEDIT='emacsclient -t +%d %s'
export TEXMFHOME=$CONFIGDIR/texmf

# Customised gtkrc file is loaded.
export GTK2_RC_FILES=$HOME/.gtkrc-2.0


### Include other files
source $CONFIGDIR/shell/shenv-gnupg

if [ -f "$HOME/personal/conf/shenv-personal" ]; then
	source $HOME/personal/conf/shenv-personal
fi



## Umask
umask 0077

## We don't need start/stop terminal
stty stop  '^q'
stty start '^q'
